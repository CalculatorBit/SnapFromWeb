---
import Hero from '@/components/Hero.astro';
import ApiDocs from '@/components/ApiDocs.astro';
import { UrlInput } from '@/components/UrlInput';
import { RecentGallery } from '@/components/RecentGallery';
import Layout from '@/layouts/Layout.astro';

const apiUrl = new URL('/api/screenshot/', Astro.url).toString();
---

<Layout title="SnapFromWeb - Website Screenshot Tool">
    <main>
        <!-- Hero Section with Input -->
        <section class="container-wrapper">
            <Hero>
                <UrlInput client:load />
            </Hero>
        </section>

        <!-- Results Section -->
        <section class="container-wrapper">
            <div
                id="results-container"
                class="px-4">
            </div>
        </section>

        <!-- Recently Captured Section -->
        <section class="container-wrapper">
            <div class="py-12 px-4 space-y-6">
                <div class="flex items-center justify-between">
                    <div class="space-y-1">
                        <h2 class="text-lg font-bold tracking-tight">
                            Recent Captures
                        </h2>
                        <p class="text-sm text-muted-foreground">
                            Latest screenshots from the gallery
                        </p>
                    </div>
                    <a
                        href="/gallery/"
                        class="text-sm font-medium text-primary hover:underline">
                        View all â†’
                    </a>
                </div>
                <RecentGallery client:load />
            </div>
        </section>

        <!-- API Documentation Section -->
        <ApiDocs apiUrl={apiUrl} />
    </main>

    <script>
        type ScreenshotResult = {
            original: string;
            screenshot?: string;
            error?: string;
        };

        let results: ScreenshotResult[] = [];
        let isLoading = false;

        async function downloadAllImages() {
            const successResults = results.filter((r) => r.screenshot);
            if (successResults.length === 0) return;

            for (const result of successResults) {
                if (!result.screenshot) continue;
                try {
                    const response = await fetch(result.screenshot);
                    const blob = await response.blob();
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.href = url;
                    const domain = new URL(result.original).hostname;
                    a.download = `${domain}-screenshot.png`;
                    document.body.appendChild(a);
                    a.click();
                    document.body.removeChild(a);
                    window.URL.revokeObjectURL(url);
                    await new Promise((r) => setTimeout(r, 300));
                } catch (err) {
                    console.error('Download failed:', err);
                }
            }
        }

        function renderResults() {
            const container = document.getElementById('results-container');
            if (!container) return;

            if (!isLoading && results.length === 0) {
                container.innerHTML = '';
                container.className = 'px-4';
                return;
            }

            container.className = 'py-8 px-4';

            if (isLoading) {
                container.innerHTML = `
                    <div class="flex flex-col items-center justify-center py-12 space-y-4">
                        <div class="relative">
                            <div class="w-12 h-12 rounded-full border-4 border-muted"></div>
                            <div class="absolute top-0 left-0 w-12 h-12 rounded-full border-4 border-primary border-t-transparent animate-spin"></div>
                        </div>
                        <div class="text-center space-y-1">
                            <p class="font-medium">Capturing screenshots...</p>
                            <p class="text-sm text-muted-foreground">This may take a few moments</p>
                        </div>
                    </div>
                `;
                return;
            }

            const successCount = results.filter((r) => r.screenshot).length;
            const totalCount = results.length;

            container.innerHTML = `
                <div class="space-y-4">
                    <div class="flex items-center justify-between flex-wrap gap-3">
                        <div class="flex items-center gap-3">
                            <div class="w-8 h-8 rounded-full bg-green-500/10 flex items-center justify-center">
                                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                </svg>
                            </div>
                            <div>
                                <h2 class="font-bold">Screenshots Ready</h2>
                                <p class="text-xs text-muted-foreground">${successCount} of ${totalCount} captured</p>
                            </div>
                        </div>
                        ${
                            successCount > 1
                                ? `
                        <button id="download-all-btn" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-primary text-primary-foreground text-sm font-medium hover:bg-primary/90 transition-colors">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                            </svg>
                            Download All (${successCount})
                        </button>
                        `
                                : ''
                        }
                    </div>
                    <div class="grid gap-3 grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5" id="screenshots-grid"></div>
                </div>
            `;

            const downloadBtn = document.getElementById('download-all-btn');
            if (downloadBtn) {
                downloadBtn.addEventListener('click', downloadAllImages);
            }

            const grid = document.getElementById('screenshots-grid');
            if (!grid) return;

            results.forEach((result) => {
                const card = document.createElement('div');
                card.className =
                    'rounded-xl border bg-card overflow-hidden group hover:shadow-lg hover:border-primary/30 transition-all duration-300 cursor-pointer';
                card.setAttribute('data-screenshot', result.screenshot || '');
                card.setAttribute('data-url', result.original);

                let imageHtml = '';
                if (result.screenshot) {
                    imageHtml = `
                        <div class="aspect-video bg-muted relative overflow-hidden">
                            <img src="${result.screenshot}" alt="Screenshot" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" loading="lazy" />
                            <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                <span class="text-white text-sm font-medium">View</span>
                            </div>
                        </div>
                    `;
                }

                let errorHtml = '';
                if (result.error) {
                    errorHtml = `
                        <div class="aspect-video bg-destructive/10 flex items-center justify-center">
                            <svg class="w-8 h-8 text-destructive/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="p-2.5">
                            <p class="text-xs text-destructive truncate">${result.error}</p>
                        </div>
                    `;
                } else {
                    errorHtml = `
                        <div class="p-2.5">
                            <p class="text-sm font-medium truncate">${new URL(result.original).hostname}</p>
                        </div>
                    `;
                }

                card.innerHTML = result.screenshot
                    ? imageHtml +
                      `<div class="p-2.5"><p class="text-sm font-medium truncate">${new URL(result.original).hostname}</p></div>`
                    : errorHtml;

                if (result.screenshot) {
                    card.addEventListener('click', () =>
                        openFullscreen(result.screenshot!, result.original),
                    );
                }

                grid.appendChild(card);
            });
        }

        function openFullscreen(screenshot: string, url: string) {
            const domain = new URL(url).hostname;
            const overlay = document.createElement('div');
            overlay.className =
                'fixed inset-0 z-50 bg-black/90 flex items-center justify-center p-4';
            overlay.innerHTML = `
                <div class="absolute top-4 right-4 flex items-center gap-2 z-10">
                    <a href="${url}" target="_blank" rel="noopener noreferrer" class="p-2 rounded-full bg-white/10 hover:bg-white/20 text-white transition-colors" title="Visit website">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path></svg>
                    </a>
                    <a href="${screenshot}" download="${domain}-screenshot.png" class="p-2 rounded-full bg-white/10 hover:bg-white/20 text-white transition-colors" title="Download">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path></svg>
                    </a>
                    <button class="p-2 rounded-full bg-white/10 hover:bg-white/20 text-white transition-colors close-btn" title="Close">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                    </button>
                </div>
                <img src="${screenshot}" alt="Screenshot" class="max-w-full max-h-full object-contain rounded-lg" />
                <div class="absolute bottom-4 left-1/2 -translate-x-1/2 px-4 py-2 rounded-full bg-white/10 backdrop-blur text-white text-sm">
                    ${domain}
                </div>
            `;

            overlay.addEventListener('click', (e) => {
                if (e.target === overlay) overlay.remove();
            });
            overlay
                .querySelector('.close-btn')
                ?.addEventListener('click', () => overlay.remove());
            document.body.appendChild(overlay);
        }

        document.addEventListener('urlsubmit', async (e: Event) => {
            const urls = (e as CustomEvent).detail;

            isLoading = true;
            results = [];
            renderResults();

            document
                .getElementById('results-container')
                ?.scrollIntoView({ behavior: 'smooth', block: 'start' });

            try {
                const response = await fetch('/api/screenshot/', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ urls }),
                });

                const data = await response.json();

                if (data.success) {
                    results = data.data.urls;
                } else {
                    throw new Error(
                        data.error || 'Failed to capture screenshots',
                    );
                }
            } catch (error) {
                console.error('Screenshot error:', error);
                results = urls.map((url: string) => ({
                    original: url,
                    error: 'Failed to capture screenshot',
                }));
            } finally {
                isLoading = false;
                renderResults();
            }
        });
    </script>
</Layout>
