---
import Layout from '@/layouts/Layout.astro';
import { DomainGallery } from '@/components/DomainGallery';
import { ArrowLeft } from 'lucide-react';

const { domain } = Astro.params;
const decodedDomain = decodeURIComponent(domain || '');
---

<Layout title={`${decodedDomain} Screenshots - SnapFromWeb`}>
    <main class="container mx-auto px-4 py-8">
        <div class="max-w-7xl mx-auto space-y-8">
            <div class="flex items-center gap-4">
                <a
                    href="/gallery/"
                    class="text-sm text-muted-foreground hover:text-foreground flex items-center gap-2">
                    <ArrowLeft className="h-4 w-4" />
                    Back to Gallery
                </a>
            </div>
            <div class="text-center space-y-4">
                <h1 class="text-4xl font-bold tracking-tight">{decodedDomain}</h1>
                <p class="text-xl text-muted-foreground">All captured screenshots</p>
            </div>

            <DomainGallery
                client:load
                domain={decodedDomain}
            />
        </div>
    </main>
</Layout>
