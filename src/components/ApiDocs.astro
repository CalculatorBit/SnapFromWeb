---
import { Code } from 'astro/components';

interface Props {
    apiUrl: string;
}

const { apiUrl } = Astro.props;
---

<section class="bg-gradient-to-b from-secondary/30 to-secondary/60">
    <div class="container-wrapper">
        <div class="py-12 px-4 space-y-8">
            <!-- Header -->
            <div class="text-center space-y-2">
                <span
                    class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-primary/10 text-primary text-xs font-medium">
                    <svg
                        class="w-3 h-3"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
                        ></path>
                    </svg>
                    Developer API
                </span>
                <h2 class="text-2xl font-bold tracking-tight">
                    Build with our API
                </h2>
                <p class="text-muted-foreground max-w-md mx-auto">
                    Integrate screenshot capture into your apps with a simple
                    REST API
                </p>
            </div>

            <!-- API Cards Grid -->
            <div class="grid gap-4 lg:grid-cols-3">
                <!-- Quick Start -->
                <div
                    class="lg:col-span-2 border rounded-xl bg-card overflow-hidden">
                    <div class="p-4 border-b bg-muted/30">
                        <div class="flex items-center gap-2">
                            <span class="w-3 h-3 rounded-full bg-red-500"
                            ></span>
                            <span class="w-3 h-3 rounded-full bg-yellow-500"
                            ></span>
                            <span class="w-3 h-3 rounded-full bg-green-500"
                            ></span>
                            <span
                                class="ml-2 text-xs text-muted-foreground font-mono"
                                >screenshot.ts</span
                            >
                        </div>
                    </div>
                    <div class="p-4 overflow-auto">
                        <Code
                            class="p-2 rounded-2xl"
                            code={`const response = await fetch('${apiUrl}', {
  method: 'POST',
  headers: { 'Content-Type': 'application/json' },
  body: JSON.stringify({
    urls: ['https://example.com', 'https://google.com']
  })
});

const { data } = await response.json();
//console.log(data.urls[0].screenshot);`}
                            lang="ts"
                        />
                    </div>
                </div>

                <!-- Features -->
                <div class="border rounded-xl p-5 bg-card space-y-4">
                    <h3 class="font-semibold">Features</h3>
                    <ul class="space-y-3 text-sm">
                        <li class="flex items-start gap-2">
                            <svg
                                class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"
                                ></path>
                            </svg>
                            <span
                                ><strong>Batch capture</strong> - Up to 20 URLs per
                                request</span
                            >
                        </li>
                        <li class="flex items-start gap-2">
                            <svg
                                class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"
                                ></path>
                            </svg>
                            <span
                                ><strong>Ad-free</strong> - Clean screenshots without
                                popups</span
                            >
                        </li>
                        <li class="flex items-start gap-2">
                            <svg
                                class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"
                                ></path>
                            </svg>
                            <span
                                ><strong>Fast</strong> - Parallel processing for speed</span
                            >
                        </li>
                        <li class="flex items-start gap-2">
                            <svg
                                class="w-4 h-4 text-green-500 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24">
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"
                                ></path>
                            </svg>
                            <span
                                ><strong>Timeline</strong> - Track website changes
                                over time</span
                            >
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Response Format & Endpoints -->
            <div class="grid gap-4 md:grid-cols-2">
                <!-- Response Format -->
                <div class="border rounded-xl bg-card overflow-hidden">
                    <div
                        class="p-4 border-b bg-muted/30 flex items-center justify-between">
                        <span class="text-sm font-semibold"
                            >Response Format</span
                        >
                        <span
                            class="text-xs px-2 py-0.5 rounded bg-green-500/10 text-green-600 dark:text-green-400 font-mono"
                            >200 OK</span
                        >
                    </div>
                    <div class="p-4 overflow-auto">
                        <Code
                            code={`{
  "success": true,
  "data": {
    "urls": [
      {
        "original": "https://example.com",
        "screenshot": "/i/example.com/20260113-1200.png"
      }
    ]
  }
}`}
                            lang="json"
                        />
                    </div>
                </div>

                <!-- Endpoints -->
                <div class="border rounded-xl p-5 bg-card space-y-4">
                    <h3 class="font-semibold">Endpoints</h3>
                    <div class="space-y-4">
                        <div class="p-3 rounded-lg bg-muted/50 space-y-2">
                            <div class="flex items-center gap-2">
                                <span
                                    class="px-2 py-0.5 rounded text-xs font-bold bg-blue-500/20 text-blue-600 dark:text-blue-400"
                                    >POST</span
                                >
                                <code class="text-sm font-mono"
                                    >/api/screenshot</code
                                >
                            </div>
                            <p class="text-xs text-muted-foreground">
                                Capture screenshots from URLs
                            </p>
                            <code
                                class="text-xs bg-background px-2 py-1 rounded block"
                                >Body: {'{ urls: string[] }'}</code
                            >
                        </div>
                        <div class="p-3 rounded-lg bg-muted/50 space-y-2">
                            <div class="flex items-center gap-2">
                                <span
                                    class="px-2 py-0.5 rounded text-xs font-bold bg-emerald-500/20 text-emerald-600 dark:text-emerald-400"
                                    >GET</span
                                >
                                <code class="text-sm font-mono"
                                    >/api/gallery</code
                                >
                            </div>
                            <p class="text-xs text-muted-foreground">
                                Browse captured screenshots
                            </p>
                            <code
                                class="text-xs bg-background px-2 py-1 rounded block"
                                >Params: page, pageSize, domain</code
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
