---

<div class="relative pt-20 pb-10">
    <!-- Gradient Background -->
    <div class="absolute inset-0 -z-10 overflow-hidden">
        <div
            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[500px] bg-gradient-to-r from-orange-500/25 via-pink-500/25 to-purple-500/25 rounded-full blur-3xl">
        </div>
        <div
            class="absolute top-0 left-1/4 w-[300px] h-[300px] bg-gradient-to-br from-yellow-400/15 to-orange-500/15 rounded-full blur-3xl">
        </div>
        <div
            class="absolute bottom-0 right-1/4 w-[250px] h-[250px] bg-gradient-to-tl from-purple-500/15 to-pink-500/15 rounded-full blur-3xl">
        </div>
    </div>

    <div class="text-center space-y-6 relative max-w-2xl mx-auto px-4">
        <!-- Compact Header -->
        <div class="space-y-2">
            <h1 class="text-2xl md:text-3xl font-bold tracking-tight">
                Capture <span
                    class="bg-gradient-to-r from-orange-500 via-pink-500 to-purple-500 bg-clip-text text-transparent"
                    >Website Screenshots</span
                >
            </h1>
            <p class="text-muted-foreground">
                Clean, ad-free screenshots in seconds
            </p>
        </div>

        <!-- Input Slot -->
        <div class="pt-2">
            <slot />
        </div>

        <!-- Minimal Feature Tags -->
        <div class="flex justify-center gap-4 text-xs text-muted-foreground">
            <span class="flex items-center gap-1">
                <svg
                    class="w-3 h-3 text-green-500"
                    fill="currentColor"
                    viewBox="0 0 20 20">
                    <path
                        fill-rule="evenodd"
                        d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                        clip-rule="evenodd"
                    ></path>
                </svg>
                No Ads
            </span>
            <span class="flex items-center gap-1">
                <svg
                    class="w-3 h-3 text-blue-500"
                    fill="currentColor"
                    viewBox="0 0 20 20">
                    <path
                        fill-rule="evenodd"
                        d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z"
                        clip-rule="evenodd"
                    ></path>
                </svg>
                Fast
            </span>
            <span class="flex items-center gap-1">
                <svg
                    class="w-3 h-3 text-purple-500"
                    fill="currentColor"
                    viewBox="0 0 20 20">
                    <path
                        d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"
                    ></path>
                </svg>
                Batch
            </span>
        </div>
    </div>
</div>
